#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
  CFLAGS += -O0
else
  CFLAGS += -O2 -fno-strict-aliasing
endif

build: debian/stamp-build
debian/stamp-build:
	dh_testdir

	mkdir -p build
	libtoolize --automake --copy --force
	aclocal
	automake --add-missing --foreign
	autoconf

	mkdir -p build/debug build/optimized build/toi

	# ./configure
	cd build/debug && CFLAGS="$(CFLAGS)" ../../configure \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--includedir=/usr/include/cm4all/libbeng-proxy-0 \
		--enable-documentation \
		--enable-debug

	# Build
	$(MAKE) -C build/debug \
		src/cm4all-beng-proxy \
		src/cm4all-beng-proxy-delegate-helper \
		src/libcm4all-istream.a doc/beng.pdf

	# ./configure
	cd build/optimized && CFLAGS="$(CFLAGS)" ../../configure \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-documentation \
		--disable-debug

	# Build
	$(MAKE) -C build/optimized \
		src/cm4all-beng-proxy

	# ./configure
	cd build/toi && CFLAGS="$(CFLAGS)" ../../configure \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--disable-documentation \
		--disable-debug \
		--with-session-id=20

	# Build
	$(MAKE) -C build/toi \
		src/cm4all-beng-proxy

	touch $@

check: debian/stamp-check
debian/stamp-check: debian/stamp-build
	dh_testdir

	$(MAKE) -C build/debug check

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f debian/stamp-*

	rm -rf build

	dh_clean

# Build architecture-independent files here.
binary-indep: build check
	dh_testdir -i
	dh_testroot -i
	dh_installdirs -i
	dh_installdocs -i
	dh_installchangelogs -i
	dh_installinit -i
	dh_install -i
	dh_link -i
	#dh_strip -i
	dh_compress -i -X.pdf
	dh_fixperms -i
	umask 0022 && dh_pycentral -ppython-cm4all-beng-proxy
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build check
	dh_testdir -a
	dh_testroot -a
	dh_installdirs -a
	dh_installdocs -a
	dh_installchangelogs -a
	dh_installinit -a
	dh_install -a
	dh_link -a
	dh_strip -p cm4all-beng-proxy --dbg-package=cm4all-beng-proxy-dbg
	dh_strip -p cm4all-beng-proxy-optimized --dbg-package=cm4all-beng-proxy-optimized-dbg
	dh_strip -p cm4all-beng-proxy-toi --dbg-package=cm4all-beng-proxy-toi-dbg
	dh_compress -a
	dh_fixperms -a
	umask 0022 && dh_pycentral -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build check clean binary-indep binary-arch binary
