#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

MESON_OPTIONS = --prefix=/usr \
	--includedir=include/cm4all/libbeng-proxy-3 \
	--werror

debian/build/debug/build.ninja: meson.build
	rm -rf $(@D)
	meson . $(@D) --buildtype=debugoptimized --optimization=g $(MESON_OPTIONS)

debian/build/optimized/build.ninja: meson.build
	rm -rf $(@D)
	meson . $(@D) --buildtype=debugoptimized $(MESON_OPTIONS) -Db_ndebug=true

debian/stamp-build-debug: debian/build/debug/build.ninja
	ninja -v -C $(<D) test
	touch $@

debian/stamp-build-optimized: debian/build/optimized/build.ninja
	ninja -v -C $(<D) cm4all-beng-proxy
	touch $@

TEX_VARS =
TEX_FLAGS = --interaction=nonstopmode --no-shell-escape --output-format=pdf
TEX_RUN = $(TEX_VARS) lualatex $(TEX_FLAGS) --output-directory=$(@D)

TEX_SOURCES = doc/beng.tex doc/lb.tex
TEX_OUTPUTS = $(patsubst %.tex,%.pdf,$(TEX_SOURCES))

$(TEX_OUTPUTS): %.pdf: %.tex
	$(TEX_RUN) $<
	$(TEX_RUN) $<

debian/stamp-doc: $(TEX_OUTPUTS)
	touch $@

build: debian/stamp-build-debug debian/stamp-build-optimized debian/stamp-doc

clean:
	dh_testdir
	dh_testroot
	rm -f debian/stamp-*

	rm -rf debian/build

	dh_clean

# Build architecture-independent files here.
binary-indep: build
	dh_testdir -i
	dh_testroot -i
	dh_installdirs -i
	dh_installdocs -i
	dh_installchangelogs -i
	dh_systemd_enable -i
	dh_systemd_start -i --no-start
	dh_installinit -i
	dh_install -i
	dh_link -i
	#dh_strip -i
	dh_compress -i -X.pdf
	dh_fixperms -i
	dh_python2 -ppython-cm4all-beng-proxy
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build
	dh_testdir -a
	dh_testroot -a
	dh_installdirs -a
	dh_installdocs -a
	dh_installchangelogs -a
	dh_systemd_enable -a
	dh_systemd_start -a --no-start
	dh_installinit -a
	dh_install -a
	dh_link -a
	dh_strip -p cm4all-beng-proxy --dbg-package=cm4all-beng-proxy-dbg
	dh_strip -p cm4all-beng-proxy-optimized --dbg-package=cm4all-beng-proxy-optimized-dbg
	dh_strip -p cm4all-beng-lb --dbg-package=cm4all-beng-lb-dbg
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
