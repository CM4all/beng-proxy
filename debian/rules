#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
  CFLAGS += -O0
else
  CFLAGS += -O2
endif

CFLAGS += -fno-omit-frame-pointer

debian/stamp-autogen:
	dh_testdir

	mkdir -p build
	aclocal -I m4
	automake --add-missing --foreign
	autoconf

	touch $@

debian/stamp-configure-debug: debian/stamp-autogen
	mkdir -p build/debug
	cd build/debug && CFLAGS="$(CFLAGS)" ../../configure \
		CC=clang CXX=clang++ CXXFLAGS="-D__STRICT_ANSI__ $(CFLAGS)" \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--includedir=/usr/include/cm4all/libbeng-proxy-0 \
		--enable-nfs \
		--enable-documentation \
		--enable-debug
	touch $@

debian/stamp-configure-optimized: debian/stamp-autogen
	mkdir -p build/optimized
	cd build/optimized && CFLAGS="$(CFLAGS)" ../../configure \
		CC=clang CXX=clang++ CXXFLAGS="-D__STRICT_ANSI__ $(CFLAGS)" \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-nfs \
		--disable-documentation \
		--disable-debug
	touch $@

debian/stamp-configure-toi: debian/stamp-autogen
	mkdir -p build/toi
	cd build/toi && CFLAGS="$(CFLAGS)" ../../configure \
		CC=clang CXX=clang++ CXXFLAGS="-D__STRICT_ANSI__ $(CFLAGS)" \
		--host=$(DEB_HOST_GNU_TYPE) --build=$(DEB_BUILD_GNU_TYPE) \
		--disable-dependency-tracking \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-nfs \
		--disable-documentation \
		--disable-debug \
		--with-session-id=20
	touch $@

debian/stamp-build-debug: debian/stamp-configure-debug
	$(MAKE) -C build/debug \
		cm4all-beng-lb \
		cm4all-beng-proxy \
		cm4all-beng-proxy-delegate-helper \
		doc/beng.pdf doc/lb.pdf

debian/stamp-build-optimized: debian/stamp-configure-optimized
	$(MAKE) -C build/optimized \
		cm4all-beng-proxy

debian/stamp-build-toi: debian/stamp-configure-toi
	$(MAKE) -C build/toi \
		cm4all-beng-proxy

build: debian/stamp-build-debug debian/stamp-build-optimized debian/stamp-build-toi

check: debian/stamp-check
debian/stamp-check: debian/stamp-build-debug
	dh_testdir

	$(MAKE) -C build/debug check

	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f debian/stamp-*

	rm -rf build

	dh_clean

# Build architecture-independent files here.
binary-indep: build check
	dh_testdir -i
	dh_testroot -i
	dh_installdirs -i
	dh_installdocs -i
	dh_installchangelogs -i
	dh_installinit -i
	dh_install -i
	dh_link -i
	#dh_strip -i
	dh_compress -i -X.pdf
	dh_fixperms -i
	dh_python2 -ppython-cm4all-beng-proxy
	dh_installdeb -i
	dh_shlibdeps -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

# Build architecture-dependent files here.
binary-arch: build check
	dh_testdir -a
	dh_testroot -a
	dh_installdirs -a
	dh_installdocs -a
	dh_installchangelogs -a
	dh_installinit -a
	dh_install -a
	dh_link -a
	dh_strip -p cm4all-beng-proxy --dbg-package=cm4all-beng-proxy-dbg
	dh_strip -p cm4all-beng-proxy-optimized --dbg-package=cm4all-beng-proxy-optimized-dbg
	dh_strip -p cm4all-beng-proxy-toi --dbg-package=cm4all-beng-proxy-toi-dbg
	dh_strip -p cm4all-beng-lb --dbg-package=cm4all-beng-lb-dbg
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build check clean binary-indep binary-arch binary
